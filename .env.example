# EvalWise Environment Configuration Template
# SECURITY WARNING: Generate new secure values for production!
# Use: openssl rand -hex 32

# Database Configuration
DATABASE_URL=postgresql://evalwise:CHANGE_ME_USE_SECURE_PASSWORD@postgres:5432/evalwise
POSTGRES_DB=evalwise
POSTGRES_USER=evalwise
POSTGRES_PASSWORD=CHANGE_ME_USE_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security Configuration - CRITICAL: Generate new keys for production
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
JWT_SECRET_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
API_ENCRYPTION_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32

# Environment - MUST be 'production' for live deployments
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# Cookie Security - MUST be true for production
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# CORS Configuration - Set specific origins for production
CORS_ORIGINS=["https://yourdomain.com"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Session Configuration  
SESSION_LIFETIME_SECONDS=3600
MAX_SESSIONS_PER_USER=5

# External API Keys (optional)
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Logging
LOG_LEVEL=INFO